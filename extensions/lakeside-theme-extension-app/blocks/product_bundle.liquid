{% comment %}
  Product Bundle Block
  Displays products in a grid with bundle functionality
{% endcomment %}

{% render 'bundle_styles' %}

{% assign bundle_size = block.settings.bundle_size | default: 6 %}
{% assign products = collections[block.settings.collection].products %}

{% assign bundle_product = block.settings.bundle_product %}
{% assign bundle_variant_id = bundle_product.first_available_variant.id %}

<div class="product-bundle-container" 
     data-bundle-size="{{ bundle_size }}"
     data-bundle-id="{{ block.id }}"
     data-bundle-variant-id="{{ bundle_variant_id }}"
     style="--bundle-color: {{ block.settings.bundle_color | default: '#007acc' }};
            --bundle-accent-color: {{ block.settings.bundle_accent_color | default: '#ff6b35' }};
            --bundle-bg: {{ block.settings.background_color | default: '#ffffff' }};
            --bundle-border: {{ block.settings.border_color | default: '#e1e5e9' }};
            --bundle-text: {{ block.settings.text_color | default: '#333333' }};
            --bundle-text-light: {{ block.settings.text_light_color | default: '#666666' }};
            --bundle-success: {{ block.settings.success_color | default: '#b1e0cd' }};
            --bundle-error: {{ block.settings.error_color | default: '#dc3545' }};
            --bundle-warning: {{ block.settings.warning_color | default: '#ffc107' }};
            --bundle-button-hover: {{ block.settings.button_hover_color | default: '#005a9e' }};
            --bundle-error-hover: {{ block.settings.error_hover_color | default: '#c82333' }};
            --bundle-clear-hover: {{ block.settings.clear_hover_color | default: '#545b62' }};
            --bundle-container-bg: {{ block.settings.container_background_color | default: '#f8f9fa' }};
            --bundle-shadow-color: {{ block.settings.shadow_color | default: 'rgba(0, 123, 204, 0.15)' }};">
  
  <div class="bundle-header">
    <h2 class="bundle-title">{{ block.settings.title | default: 'Create Your Bundle' }}</h2>
  </div>

  <div class="bundle-content">
    <section class="products-section">
      <h3>{{ 'bundle.products' | t }}</h3>
      <div class="products-grid" id="products-grid-{{ block.id }}">
        {% for product in products %}
          {% render 'bundle_product_card',
            product: product,
            variant: product.first_available_variant,
            bundle_id: block.id,
            show_price: block.settings.show_prices,
            product_title_size: block.settings.product_title_size,
            product_title_font: block.settings.product_title_font,
            enable_product_link: block.settings.enable_product_link,
            button_size: block.settings.button_text_size,
            image_size: block.settings.product_image_size %}
        {% endfor %}
      </div>
    </section>
    
    <section class="bundle-section">
      <h3>{{ 'bundle.yourBundle' | t }}</h3>
      <div class="bundle-container">
        <div class="bundle-slots" id="bundle-slots-{{ block.id }}">
          {% for i in (1..bundle_size) %}
            <div class="bundle-slot" data-index="{{ forloop.index0 }}">
              <div class="slot-placeholder">
                <span class="slot-number">{{ forloop.index }}</span>
              </div>
            </div>
          {% endfor %}
        </div>
        <div class="bundle-actions">
          <button type="button" 
                  class="add-to-cart-btn hidden" 
                  id="add-to-cart-{{ block.id }}">
            {{ 'bundle.addToCart' | t }}
          </button>
          <button type="button" 
                  class="clear-bundle-btn" 
                  id="clear-bundle-{{ block.id }}">
            {{ 'bundle.clearBundle' | t }}
          </button>
        </div>
        <div class="bundle-summary" id="bundle-summary-{{ block.id }}">
          <p class="bundle-status">{{ 'bundle.selectProducts' | t: count: bundle_size }}</p>
        </div>
      </div>
      <div class="bundle-gift-message-container">
        <div class="bundle-gift-message-label">
          <h3 for="bundle-gift-message-{{ block.id }}">{{ 'bundle.giftMessage' | t }}</h3>
        </div>
        <div class="bundle-gift-message-input-container">
          <textarea id="bundle-gift-message-{{ block.id }}" name="bundle-gift-message" placeholder="{{ 'bundle.giftMessagePlaceholder' | t }}" class="bundle-gift-message-input"></textarea>
        </div>
      </div> 
    </section>
  </div>
</div>

{% render 'bundle_script' %}

{% schema %}
{
  "name": "Product Bundle",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Bundle Title",
      "default": "Create Your Bundle"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Product Collection"
    },
    {
      "type": "product",
      "id": "bundle_product",
      "label": "Bundle Product"
    },
    {
      "type": "range",
      "id": "bundle_size",
      "label": "Bundle Size",
      "min": 1,
      "max": 12,
      "step": 1,
      "default": 6
    },
    {
      "type": "range",
      "id": "max_products",
      "label": "Maximum Products to Show",
      "min": 4,
      "max": 50,
      "step": 1,
      "default": 20
    },
    {
      "type": "checkbox",
      "id": "show_prices",
      "label": "Show Product Prices",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_product_link",
      "label": "Enable Product Link",
      "default": false
    },
    {
      "type": "header",
      "content": "Typography Settings"
    },
    {
      "type": "font_picker",
      "id": "product_title_font",
      "label": "Product Title Font",
      "default": "assistant_n4"
    },
    {
      "type": "range",
      "id": "product_title_size",
      "label": "Product Title Text Size",
      "default": 14,
      "min": 10,
      "max": 20,
      "step": 1,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "button_text_size",
      "label": "Add to Bundle Button Text Size",
      "default": 12,
      "min": 8,
      "max": 20,
      "step": 1,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "product_image_size",
      "label": "Product Image Size",
      "min": 100,
      "max": 200,
      "step": 10,
      "default": 150,
      "info": "Size in pixels (width and height)"
    },
    {
      "type": "header",
      "content": "Primary Colors"
    },
    {
      "type": "color",
      "id": "bundle_color",
      "label": "Primary Color",
      "default": "#007acc"
    },
    {
      "type": "color",
      "id": "bundle_accent_color",
      "label": "Accent Color",
      "default": "#ff6b35"
    },
    {
      "type": "header",
      "content": "Background Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Main Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "container_background_color",
      "label": "Container Background",
      "default": "#f8f9fa"
    },
    {
      "type": "header",
      "content": "Text Colors"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Primary Text",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "text_light_color",
      "label": "Secondary Text",
      "default": "#666666"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border Color",
      "default": "#e1e5e9"
    },
    {
      "type": "color",
      "id": "shadow_color",
      "label": "Shadow Color",
      "default": "rgba(0, 123, 204, 0.15)"
    },
    {
      "type": "header",
      "content": "Button Styles"
    },
    {
      "type": "color",
      "id": "success_color",
      "label": "Success Color",
      "default": "#b1e0cd"
    },
    {
      "type": "color",
      "id": "error_color",
      "label": "Error Color",
      "default": "#dc3545"
    },
    {
      "type": "color",
      "id": "warning_color",
      "label": "Warning Color",
      "default": "#ffc107"
    },
    {
      "type": "color",
      "id": "button_hover_color",
      "label": "Primary Button Hover",
      "default": "#005a9e"
    },
    {
      "type": "color",
      "id": "error_hover_color",
      "label": "Error Button Hover",
      "default": "#c82333"
    },
    {
      "type": "color",
      "id": "clear_hover_color",
      "label": "Clear Button Hover",
      "default": "#545b62"
    }
  ]
}
{% endschema %} 